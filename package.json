{
  "name": "aiiq-taiq",
  "version": "0.1.0",
  "description": "TradingView-style App for Options & Crypto (Solana + Deribit)",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" --filter \"./services/*\" dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format",
    "clean": "pnpm --recursive clean",
    "docker:dev": "docker-compose -f infra/docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f infra/docker-compose.dev.yml down",
    "setup": "pnpm install && pnpm build",
    "pm2:start": "pm2 start ecosystem.config.js --env development",
    "pm2:restart": "pm2 restart ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop ecosystem.config.js || true",
    "pm2:delete": "pm2 delete ecosystem.config.js || true",
    "pm2:list": "pm2 ls",
    "pm2:logs": "pm2 logs --lines 200"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
